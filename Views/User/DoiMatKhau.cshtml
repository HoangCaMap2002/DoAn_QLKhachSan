@{
    Layout = "~/Views/Shared/_LayoutTrangCaNhan.cshtml";
}
<section class="middle-padding">
    <div class="container">
        <!--dasboard-wrap-->
        <div class="dasboard-wrap fl-wrap">
            <!-- dashboard-content-->
            <div class="dashboard-content fl-wrap">
                <div class="box-widget-item-header">
                    <h3>Đổi mật khẩu</h3>
                </div>
                <form>
                    <div class="custom-form no-icons">
                        <div class="pass-input-wrap fl-wrap">
                            <label>Mật khẩu hiện tại</label>
                            <input type="password" class="pass-input" placeholder="" value="" />
                            <span class="eye"><i class="far fa-eye" aria-hidden="true"></i> </span>
                        </div>
                        <div class="pass-input-wrap fl-wrap">
                            <label>Mật khẩu mới</label>
                            <input type="password" class="pass-input" placeholder="" value="" />
                            <span class="eye"><i class="far fa-eye" aria-hidden="true"></i> </span>
                        </div>
                        <div class="pass-input-wrap fl-wrap">
                            <label>Xác nhận mật khẩu mới</label>
                            <input type="password" class="pass-input" placeholder="" value="" />
                            <span class="eye"><i class="far fa-eye" aria-hidden="true"></i> </span>
                        </div>
                        <button class="btn  big-btn  color2-bg flat-btn float-btn">Lưu<i class="fal fa-save"></i></button>
                    </div>
                </form>
            </div>
            <!-- dashboard-list-box end-->
        </div>
        <!-- dasboard-wrap end-->
    </div>
</section>