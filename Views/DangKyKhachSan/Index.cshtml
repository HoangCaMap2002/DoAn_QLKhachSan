    function LuuPhong(){
        var formData = new FormData($("#step2")[0]);

        // Lấy URL của action từ thuộc tính action của form
        var url = $("#step2").attr('action');
        alert(url);
        // Gửi dữ liệu form đi bằng AJAX
        $.ajax({    
            type: "POST",
            url: url,
            data: formData,
            contentType: false,
            processData: false,
            success: function (response) {
                console.log(response); 
            },
            error: function (xhr, status, error) {
                // Xử lý lỗi nếu cần
                console.error(error);
            }
        });
