@model DoAn_QLKhachSan.ViewModels.ThongKeProfileViewModel
    <div class="dasboard-sidebar-content fl-wrap">
        <div class="dasboard-avatar">
            <img src="../assets/images/avatar/@Model.Anh" alt="">
        </div>
        <div class="dasboard-sidebar-item fl-wrap">
            <h3>
                <span>Chào mừng</span>
                @Model.HoVaTen
            </h3>
        </div>
        <a href="#" class="ed-btn">Thêm mới khách sạn</a>
        <div class="user-stats fl-wrap">
            <ul>
                <li>
                    Số khách sạn
                    <span>@Model.SoKhachSan</span>
                </li>
                <li>
                    Số lượng đặt
                    <span>@Model.SoLuotDat</span>
                </li>
                <li>
                    Đánh giá
                    <span>@Model.SoLuotDanhGia</span>
                </li>
            </ul>
        </div>
        <a href="/Access/Logout" class="log-out-btn color-bg">Đăng xuất<i class="far fa-sign-out"></i></a>
    </div>
